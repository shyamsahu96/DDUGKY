        </activity>
        <activity android:name=".EmployerActivity"></activity>
        <activity android:name=".CandidateActivity"></activity>
        <activity android:name=".TrainerActivity"></activity>
        <activity
            android:name=".UserInfoAct"
            android:theme="@style/AppTheme.WithActionBar" />
